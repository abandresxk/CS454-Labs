<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:paddingBottom="16dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:paddingTop="16dp"
    android:weightSum="1.0"
    tools:context=".MainActivity"
    android:background="@color/background" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_centerVertical="true"
        android:layout_weight=".7">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="1.0"
        android:background="#FFFFF">
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="Player 1"
            android:textSize="25sp"
            android:id="@+id/player"
            android:layout_weight=".4"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="P1:    "
            android:textSize="20sp"
            android:id="@+id/p1"
            android:layout_weight=".3"/>
        <TextView
            android:layout_width="0dip"
            android:layout_height="wrap_content"
            android:text="P2:    "
            android:textSize="20sp"
            android:id="@+id/p2"
            android:layout_weight=".3"/>
    </LinearLayout>

        <FrameLayout
            android:id="@+id/die1"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:background="@drawable/die1" />

        <FrameLayout
            android:id="@+id/die2"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/die1" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/die1"
            android:layout_margin="30dp"
            android:layout_centerHorizontal="true">
            <TextView
                android:id="@+id/round"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingTop="5dp"
                android:text="Round: 0"
                android:background="#ff83877f"

                android:textColor="#FFFFFF"
                android:textSize="30sp"/>

            <Button
                android:id="@+id/hold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/round"
                android:background="#ff83877f"
                android:text="Hold"
                android:textColor="#FFFFFF"
                android:textSize="20sp"/>

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight=".3">

        <Button
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:text="@string/roll"
            android:layout_alignParentBottom="true"
            android:textSize="30sp"
            android:id="@+id/button"
            android:background="@drawable/large_button"/>
    </RelativeLayout>

</LinearLayout>
